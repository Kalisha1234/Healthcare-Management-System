<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" 
      fx:controller="org.example.controllers.UserController" 
      spacing="20" style="-fx-background-color: #f5f7fa;">
    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>
    
    <Label text="User Management" styleClass="title-label"/>
    
    <VBox styleClass="card" spacing="15">
        <Label text="User Information" styleClass="section-label"/>
        
        <GridPane hgap="15" vgap="15">
            <columnConstraints>
                <ColumnConstraints percentWidth="33"/>
                <ColumnConstraints percentWidth="33"/>
                <ColumnConstraints percentWidth="34"/>
            </columnConstraints>
            
            <VBox spacing="5" GridPane.rowIndex="0" GridPane.columnIndex="0">
                <Label text="Username *"/>
                <TextField fx:id="txtUsername" promptText="Enter username"/>
            </VBox>
            
            <VBox spacing="5" GridPane.rowIndex="0" GridPane.columnIndex="1">
                <Label text="Password *"/>
                <PasswordField fx:id="txtPassword" promptText="Enter password"/>
            </VBox>
            
            <VBox spacing="5" GridPane.rowIndex="0" GridPane.columnIndex="2">
                <Label text="Role *"/>
                <ComboBox fx:id="cbRole" promptText="Select role" maxWidth="Infinity"/>
            </VBox>
            
            <VBox spacing="5" GridPane.rowIndex="1" GridPane.columnIndex="0">
                <Label text="First Name *"/>
                <TextField fx:id="txtFirstName" promptText="Enter first name"/>
            </VBox>
            
            <VBox spacing="5" GridPane.rowIndex="1" GridPane.columnIndex="1">
                <Label text="Last Name *"/>
                <TextField fx:id="txtLastName" promptText="Enter last name"/>
            </VBox>
            
            <VBox spacing="5" GridPane.rowIndex="1" GridPane.columnIndex="2">
                <Label text="Email *"/>
                <TextField fx:id="txtEmail" promptText="user@hospital.com"/>
            </VBox>
            
            <VBox spacing="5" GridPane.rowIndex="2" GridPane.columnIndex="0">
                <Label text="Status"/>
                <CheckBox fx:id="chkActive" text="Active" selected="true"/>
            </VBox>
        </GridPane>
        
        <HBox spacing="10" alignment="CENTER_LEFT">
            <padding>
                <Insets top="10"/>
            </padding>
            <Button text="âž• Add User" styleClass="btn, btn-success" onAction="#handleAdd"/>
            <Button text="âœï¸ Update" styleClass="btn, btn-primary" onAction="#handleUpdate"/>
            <Button text="ðŸ—‘ï¸ Delete" styleClass="btn, btn-danger" onAction="#handleDelete"/>
        </HBox>
    </VBox>
    
    <VBox styleClass="card" VBox.vgrow="ALWAYS">
        <Label text="User Records" styleClass="section-label">
            <VBox.margin>
                <Insets bottom="15"/>
            </VBox.margin>
        </Label>
        
        <TableView fx:id="userTable" onMouseClicked="#handleTableClick" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
                <TableColumn fx:id="colUsername" text="Username" prefWidth="120"/>
                <TableColumn fx:id="colFirstName" text="First Name" prefWidth="120"/>
                <TableColumn fx:id="colLastName" text="Last Name" prefWidth="120"/>
                <TableColumn fx:id="colRole" text="Role" prefWidth="120"/>
                <TableColumn fx:id="colEmail" text="Email" prefWidth="200"/>
            </columns>
        </TableView>
    </VBox>
</VBox>
