<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" 
      fx:controller="org.example.controllers.PatientController" 
      spacing="20" style="-fx-background-color: #f5f7fa;">
    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>
    
    <Label text="Patient Management" styleClass="title-label"/>
    
    <!-- Search Bar -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <TextField fx:id="txtSearch" promptText="ðŸ” Search by name, email, phone, or ID..." HBox.hgrow="ALWAYS" style="-fx-pref-height: 40;"/>
        <Button text="Search" onAction="#handleSearch" styleClass="btn, btn-primary"/>
        <Button text="Clear" onAction="#handleClearSearch" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-background-radius: 6; -fx-padding: 10 20;"/>
        <Label fx:id="lblCacheStatus" text="Cache: Items: 0 | Lists: 0" style="-fx-background-color: #e8f4f8; -fx-padding: 10 15; -fx-background-radius: 6; -fx-font-size: 12px; -fx-text-fill: #2c3e50; -fx-font-weight: bold;"/>
    </HBox>
    
    <!-- Form Card -->
    <VBox styleClass="card" spacing="15">
        <Label text="Patient Information" styleClass="section-label"/>
        
        <GridPane hgap="15" vgap="15">
            <columnConstraints>
                <ColumnConstraints percentWidth="25"/>
                <ColumnConstraints percentWidth="25"/>
                <ColumnConstraints percentWidth="25"/>
                <ColumnConstraints percentWidth="25"/>
            </columnConstraints>
            
            <VBox spacing="5" GridPane.rowIndex="0" GridPane.columnIndex="0">
                <Label text="First Name *"/>
                <TextField fx:id="txtFirstName" promptText="Enter first name"/>
            </VBox>
            
            <VBox spacing="5" GridPane.rowIndex="0" GridPane.columnIndex="1">
                <Label text="Last Name *"/>
                <TextField fx:id="txtLastName" promptText="Enter last name"/>
            </VBox>
            
            <VBox spacing="5" GridPane.rowIndex="0" GridPane.columnIndex="2">
                <Label text="Date of Birth *"/>
                <DatePicker fx:id="dpDOB" promptText="Select date" maxWidth="Infinity"/>
            </VBox>
            
            <VBox spacing="5" GridPane.rowIndex="0" GridPane.columnIndex="3">
                <Label text="Gender *"/>
                <ComboBox fx:id="cbGender" promptText="Select gender" maxWidth="Infinity"/>
            </VBox>
            
            <VBox spacing="5" GridPane.rowIndex="1" GridPane.columnIndex="0">
                <Label text="Email *"/>
                <TextField fx:id="txtEmail" promptText="email@example.com"/>
            </VBox>
            
            <VBox spacing="5" GridPane.rowIndex="1" GridPane.columnIndex="1">
                <Label text="Phone *"/>
                <TextField fx:id="txtPhone" promptText="1234567890"/>
            </VBox>
            
            <VBox spacing="5" GridPane.rowIndex="1" GridPane.columnIndex="2" GridPane.columnSpan="2">
                <Label text="Address *"/>
                <TextArea fx:id="txtAddress" promptText="Enter full address" prefRowCount="2"/>
            </VBox>
        </GridPane>
        
        <HBox spacing="10" alignment="CENTER_LEFT">
            <padding>
                <Insets top="10"/>
            </padding>
            <Button text="âž• Add Patient" styleClass="btn, btn-success" onAction="#handleAdd"/>
            <Button text="âœï¸ Update" styleClass="btn, btn-primary" onAction="#handleUpdate"/>
            <Button text="ðŸ—‘ï¸ Delete" styleClass="btn, btn-danger" onAction="#handleDelete"/>
            <Button text="ðŸ“ Add Note" styleClass="btn, btn-info" onAction="#handleAddNote" style="-fx-background-color: #3498db;"/>
            <Button text="ðŸ“‹ View Notes" styleClass="btn, btn-info" onAction="#handleViewNotes" style="-fx-background-color: #9b59b6;"/>
        </HBox>
    </VBox>
    
    <!-- Table Card -->
    <VBox styleClass="card" VBox.vgrow="ALWAYS">
        <Label text="Patient Records" styleClass="section-label">
            <VBox.margin>
                <Insets bottom="15"/>
            </VBox.margin>
        </Label>
        
        <TableView fx:id="patientTable" onMouseClicked="#handleTableClick" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
                <TableColumn fx:id="colFirstName" text="First Name" prefWidth="150"/>
                <TableColumn fx:id="colLastName" text="Last Name" prefWidth="150"/>
                <TableColumn fx:id="colEmail" text="Email" prefWidth="200"/>
                <TableColumn fx:id="colPhone" text="Phone" prefWidth="130"/>
            </columns>
        </TableView>
    </VBox>
</VBox>
